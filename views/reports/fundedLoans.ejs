    num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,")
    <th>Total: <%= "$" + loanAmtTotal.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,") %></th>
    <th></th>
    <th></th>
  </tr>

</table>
</container>
